{
    "name": "felipemenezesdm/general-laravel-app-template",
    "type": "project",
    "description": "Template padrão para criação de aplicações em Laravel 10",
    "keywords": [
        "laravel",
        "template",
        "api",
        "deploy"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "felipemenezesdm/laravel-commons": "^1.0",
        "felipemenezesdm/laravel-logger-adapter": "^1.0",
        "felipemenezesdm/laravel-secret-manager-suite": "^1.0",
        "guzzlehttp/guzzle": "^7.2",
        "laravel/framework": "^10.0",
        "laravel/octane": "^1.5",
        "laravel/sanctum": "^3.2",
        "laravel/tinker": "^2.8",
        "spatie/laravel-health": "^1.22"
    },
    "require-dev": {
        "donatj/mock-webserver": "*",
        "fakerphp/faker": "^1.9.1",
        "laravel/pint": "^1.0",
        "laravel/sail": "^1.18",
        "mockery/mockery": "^1.4.4",
        "nunomaduro/collision": "^7.0",
        "phpunit/phpunit": "^10.0",
        "spatie/laravel-ignition": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        },
        "files": [
            "app/Helpers/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "pre-install-cmd": [
            "@php -r 'file_exists(\".env\") || copy(\"./environments/\" . strtoupper(getenv(\"APP_ENV\") ?: 'local') . \".env\", \".env\"); echo \"Environment: \" . strtoupper(getenv(\"APP_ENV\") ?: 'local') . PHP_EOL;'"
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "test-unit": [
            "Composer\\Config::disableProcessTimeout",
            "./vendor/bin/phpunit"
        ],
        "test-mutation": [
            "Composer\\Config::disableProcessTimeout",
            "infection --threads=4"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "infection/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
